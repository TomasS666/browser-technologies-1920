                    <figure>
                        <image src="/img/black.jpg" alt="t-shirt"></image>
                        <figcaption><%= query.shirtText == "" ? "" : query.shirtText %></figcaption>
                    </figure>
                    <fieldset>
                        <legend>Pick a text for your shirt.</legend>
                        <label for="shirttext">Text
                            <input type="text" name="shirtText" id="shirtText"
                                value="<%= query.shirtText == "" ? "" : query.shirtText %>">
                        </label>
                    </fieldset>

                    <fieldset>
                        <button type="submit" formaction="#" data-step="0">Back to step 1</button>
                        <button type="submit" formaction="/save">Save</button>
                        <button type="submit">Go on</button>
                    </fieldset>
                </fieldset>
            </form>
        </section>
    </main>
    <%- include('components/footer.ejs') %>
</body>

