<%- include("components/head.ejs") %>

<body>
    <%- include('components/header.ejs') %>
    <main id="content">
        <section>
            <form action="/result">
                <fieldset name="field-0" data-step="0">
                    <fieldset>
                        <legend>Step 1: Pick a size</legend>
                        <label for="small">Small
                            <input required id="small" type="radio" name="size" value="small"
                                <%= query.size == "small" ? checked="checked" : checked="n" %>>
                        </label>
                        <label for="medium">Medium
                            <input id="medium" type="radio" name="size" value="medium"
                                <%= query.size == "medium" ? checked="checked" : checked="n" %>>
                        </label>
                        <label for="large">Large
                            <input id="large" type="radio" name="size" value="large"
                                <%= query.size == "large" ? checked="checked" : checked="n" %>>
                        </label>
                        <label for="xl">Extra Large
                            <input id="xl" type="radio" name="size" value="xl"
                                <%= query.size == "xl" ? checked="checked" : checked="n" %>>
                        </label>

                        <label for="xxl">Extra Extra Large
                            <input id="xxl" type="radio" name="size" value="xxl"
                                <%= query.size == "xxl" ? checked="checked" : checked="n" %>>
                        </label>
                    </fieldset>

                    <!-- <label for="reset">Reset</label>
                        <input type="reset" value="Reset the form" accesskey="r"> -->

                    <%= query.shirttext %>

                    <fieldset>
                        <input type="hidden" name="step" value="1">
                        <button type="submit" formaction="/save">Save</button>
                        <button type="submit" formaction="#black" data-step="1">Go on to step 2</button>
                    </fieldset>
                </fieldset>

                <fieldset name="field-1">
                    <legend>Step 2: Customize your shirt!</legend>
                    <!-- <img src="/img/shirt.jpg" alt=""> -->

                    <fieldset name="shirtColor">
                        <legend>Pick a color for your t-shirt</legend>
                        <label for="black">Default: Black
                            <input checked id="black" type="radio" name="shirtColor" value="black"
                                <%= query.shirtColor == "black" ? checked="checked" : checked="n" %>>
                        </label>

                        <label for="white">White
                            <input id="white" type="radio" name="shirtColor" value="white"
                                <%= query.shirtColor == "white" ? checked="checked" : checked="n" %>>
                        </label>

                        <label for="red">Red
                            <input id="red" type="radio" name="shirtColor" value="red"
                                <%= query.shirtColor == "red" ? checked="checked" : checked="n" %>>
                        </label>

                        <label for="blue">Blue
                            <input id="blue" type="radio" name="shirtColor" value="blue"
                                <%= query.shirtColor == "blue" ? checked="checked" : checked="n" %>>
                        </label>
                    </fieldset>
                    <fieldset>
                        <legend>Pick a text color</legend>
                        <label for="black">Default: Black
                            <input checked id="black" type="radio" name="textColor" value="black"
                                <%= query.textColor == "black" ? checked="checked" : checked="n" %>>
                        </label>

                        <label for="white">White
                            <input id="white" type="radio" name="textColor" value="white"
                                <%= query.textColor == "white" ? checked="checked" : checked="n" %>>
                        </label>

                        <label for="red">Red
                            <input id="red" type="radio" name="textColor" value="red"
                                <%= query.textColor == "red" ? checked="checked" : checked="n" %>>
                        </label>

                        <label for="blue">Blue
                            <input id="blue" type="radio" name="textColor" value="blue"
                                <%= query.textColor == "blue" ? checked="checked" : checked="n" %>>
                        </label>
                    </fieldset>
                    <fieldset>
                        <legend>Pick a font for your shirt!</legend>
                        <label for="font">Choose a font</label>
                        <select name="font" id="font" size="3">
                            <option value="arial">Arial</option>
                            <option value="calibri">Calibri</option>
                            <option value="times-new-roman">Times New Roman</option>
                        </select>
                    </fieldset>


