<%- include("components/head.ejs") %>

<body>
    <%- include('components/header.ejs') %>
    <main id="content">
        <section>
            <h1>Overview of your custom shirt:</h1>
            <table>
                <tbody>
                <tr>
                    <th>Property</th>
                    <th>Value</th>
                </tr>
                <% for (const [key, value] of overviewData) {
                    if(key == "step"){
                        continue
                    }
                    %>
                    <tr>
                        <td><%= key %></td> 
                        <td><%= value %></td>
                    </tr>
                <% } %> 
                </tbody>
            </table>    
            <figure>
                <img src="/img/<%= query.shirtColor %>.jpg" alt="t-shirt"></img>
                <figcaption 
                    class="<%=query.font%>"
                    style="<% if(query.textColor){ %>color:<%- query.textColor _%>;<% } _%>
                           <% if(query.fontSize){ %>font-size:<%- query.fontSize -%>px<% } _%>"
                    >
                    <%= query.shirtText == "" ? "" : query.shirtText %>
                </figcaption>
            </figure>
            <!-- <form action="">
             
                <button type="submit" formaction="/save">Save</button>
                <button>Go on</button>

            </form> -->

            <% if(typeof url != 'undefined'){ %>
                <button class="active" data-btn="save">Save this link</button><input type="text" name="save-link" title="link to your custom shirt" value="<%= url %>"></p>
            <% }else{ %>
                <p>Sorry, something went wrong</p>
            <% } %>
            
            <a href="<%= baseurl + "/design-shirt/?" + originalUrl%>">Your shirt!</a>
                Or go on with your shirt now
            </a>
        </section>
    </main>
    <%- include('components/footer.ejs') %>
</body>

</html>